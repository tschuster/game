<h2>Login</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "form", role: "form"}) do |f| %>
  <div class="form-group">
    <%= f.label :nickname %>
    <div class="row">
      <div class="col-xs-4">
        <%= f.text_field :nickname, class: "form-control" %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :password %>
    <div class="row">
      <div class="col-xs-4">
        <%= f.password_field :password, class: "form-control" %>
      </div>
    </div>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="checkbox">
      <label>
        <%= f.check_box :remember_me %> Remember me
      </label>
    </div>
  <% end -%>
  <%= f.submit "Login", class: "btn btn-primary" %>
  <br /><br />
  <%= link_to('Register', new_user_registration_path, class: "btn btn-default") %>
<% end %>
<% if false %>
  <%= link_to("Forgot your password?", new_password_path(resource_name)) %>
<% end %>