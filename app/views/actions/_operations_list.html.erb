<table border="0" class="table table-bordered" cellspacing="0" cellpadding="0">
  <tr>
    <th>Name</th>
    <th>Duration</th>
    <th style="width: 350px;">Chance of success</th>
    <th></th>
  </tr>
<% @attackable_users.each do |user| %>
  <tr>
    <td><%= user.nickname %></td>
    <td><%= humanize(current_user.time_to_attack(user)) %></td>
    <td>
      <div class="progress<%= progress_class_for(current_user.chance_of_success_against(user)) %>" style="margin-bottom: 0px; width: 300px; float: left;">
        <div class="bar" style="width: <%= current_user.chance_of_success_against(user) %>%;"></div>
      </div>
      <span style="display: block; float: right;"><%= current_user.chance_of_success_against(user) %>%</span>
    </td>
    <td>
      <% if current_user.has_incomplete_actions? %>
        <span class="btn btn-primary disabled">Action pending</span>
      <% else %>
        <%= link_to "attack", actions_path(:type_id => Action::TYPE_ATTACK_USER, :target_id => user.id), :class => "btn btn-primary", :method => :post %>
      <% end %>
    </td>
  </tr>
<% end %>
<% @not_attackable_users.each do |user| %>
  <tr>
    <td><%= user.nickname %></td>
    <td>&nbsp;</td>
    <td>
      <div class="progress" style="margin-bottom: 0px; width: 300px; float: left;">
        <div class="bar" style="width: 0%;"></div>
      </div>
      <span style="display: block; float: right;">0%</span>
    </td>
    <td>
      <span class="btn disabled">You are to weak</span>
    </td>
  </tr>
<% end %>
</table>