<h2 id="news_headline">News<%= " (#{current_user.unread_notifications_count})" if current_user.unread_notifications_count > 0 %></h2>
<table border="0" class="table table-bordered" cellspacing="0" cellpadding="0">
  <tr>
    <th style="width: 140px;">Received at</th>
    <th>Headline <%= link_to("mark as read", read_notifications_path, method: :put, class: "pull-right") if current_user.unread_notifications_count > 0 %></th>
  </tr>
  <% @notifications.each do |notification| %>
    <tr>
      <td <%= style_for notification %>><%= ll(notification.created_at, format: :long) %></td>
      <td <%= style_for notification %>><%= notification.message.html_safe %></td>
    </tr>
  <% end %>
</table>