<!DOCTYPE html>
<html>
<head>
  <title>Game</title>
  <meta charset="utf-8">
  <%= stylesheet_link_tag    "application" %>
  <%= javascript_include_tag "application" %>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <%= csrf_meta_tags %>
  <style>
    body {
      padding-top: 55px;
    }
  </style>
  <%= stylesheet_link_tag "bootstrap-responsive" %>
  <script>
    $(document).ready(function() {
      var refreshId = setInterval(function() {
         $("#current_action_container").load('<%= current_actions_url %>');
         $("#current_stats_container").load('<%= user_url(current_user) %>');
      }, 10000);
      $.ajaxSetup({ cache: false });
    });
  </script>
</head>
<body>
  <div class="navbar navbar-fixed-top">
    <div class="navbar-inner">
      <div class="container">
        <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </a>
        <%= link_to "Game", game_index_path, :class => "brand" %>
        <div class="nav-collapse">
          <ul class="nav">
            <li <%= active_class "game" %>><%= link_to "Desktop#{current_user.unread_notifications_count > 0 ? " (#{current_user.unread_notifications_count})" : nil}", game_index_path %></li>
            <li <%= active_class "actions", "index" %>><%= link_to "Actions", actions_path %></li>
            <li <%= active_class "jobs" %>><%= link_to "Jobs", jobs_path %></li>
            <li <%= active_class "actions", "operations" %>><%= link_to "Operations", operations_path %></li>
            <li <%= active_class "equipments" %>><%= link_to "Equipment", equipments_path %></li>
<% if current_user.admin? %>
            <li <%= active_class "action_shell" %>><%= link_to "Action Shell", "#" %></li>
<% end %>
          </ul>
          <ul class="nav pull-right">
            <li class="dropdown">
              <%= link_to "#", :class => "dropdown-toggle", :'data-toggle' => "dropdown" do %>
                <%= current_user.nickname %> <b class="caret"></b>
              <% end %>
              <ul class="dropdown-menu">
                <div id="personal_stats" style="padding: 15px; min-width: 155px;">
                  <h3>Your current Stats</h3>
                  <table border="0" cellspacing="0" cellpadding="0" style="width: 100%; margin-top: 6px;">
                    <tr>
                      <td>Hacking skill:</td>
                      <td style="text-align: right;"><%= current_user.hacking_ratio %></td>
                    </tr>
                    <tr>
                      <td>Botnet ratio:</td>
                      <td style="text-align: right;"><%= current_user.botnet_ratio %></td>
                    </tr>
                    <tr>
                      <td>Defense ratio:</td>
                      <td style="text-align: right;"><%= current_user.defense_ratio %></td>
                    </tr>
                    <tr>
                      <td>Money:</td>
                      <td style="text-align: right;"><%= number_to_currency(current_user.money) %></td>
                    </tr>
                  </table>
                </div>
              </ul>
            </li>
            <li><%= link_to "Logout", destroy_user_session_path, :method => :delete %></li>
          </ul>
        </div>
      </div>
    </div>
  </div>
  <div class="container">
    <% flash.each do |key, msg| -%>
      <% if key == :alert %>
        <div class="alert alert-error">
      <% else %>
        <div class="alert alert-success">
      <% end %>
        <a class="close" data-dismiss="alert">Ã—</a>
        <%= msg %>
      </div>
      <script>
        $(document).ready(function() {
          $(".alert").delay(2000).fadeOut('slow');
        });
      </script>
    <% end -%>
    <div class="row">
      <div class="span3">
        <div id="current_stats_container">
          <%= render :partial => "users/stats" %>
        </div>
      </div>
      <div class="span9">
        <div id="current_action_container">
          <%= render :partial => "actions/current" %>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="span12">
        <%= yield %>
      </div>
    </div>
  </div>
</body>
</html>